<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.collact.Dashboard"
    tools:showIn="@layout/activity_dashboard">

    <com.github.aakira.expandablelayout.ExpandableWeightLayout
        android:id="@+id/expandableLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/colorAccent"
        app:ael_duration="1000"
        app:ael_interpolator="accelerateDecelerate">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello There" />
        </LinearLayout>

    </com.github.aakira.expandablelayout.ExpandableWeightLayout>

    <LinearLayout
        android:id="@+id/viewTwo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/crosslime"
            android:backgroundTint="@color/colorAccent"/>

    </LinearLayout>


    <com.github.aakira.expandablelayout.ExpandableWeightLayout
        android:id="@+id/expandableLayoutTwo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/colorPrimaryDark"
        app:ael_duration="1000"
        app:ael_interpolator="accelerateDecelerate">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello There" />
        </LinearLayout>
    </com.github.aakira.expandablelayout.ExpandableWeightLayout>

</LinearLayout>
